extends ../layouts/layout

block content
  h1 Listing share2s

  table
    thead
      tr
        each n in ['content','topic_id','user_id']
          th #{n}
        th(colspan="3")
    tbody
      each share2 in share2s
        tr
          each n in ['share2.content','share2.topic_id','share2.user_id']
            td #{ eval(n) }
          td 
            a(href='/share2s/#{ share2._id}') Show
          td 
            a(href='/share2s/#{ share2._id}/edit') Edit
          td 
            a(onclick="click_del('/share2s/#{ share2._id}/')") Delete

  br

  p 
    a(href='/share2s/new') New Share2
